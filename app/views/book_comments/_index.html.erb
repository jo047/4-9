<table>
    <% book_comments.each do |comment| %>
        <% unless comment.id.nil? %>
            <div class="comment-container">
                <div class="comment-box">
                    <div class="comment-avatar">
                        <%= link_to user_path(comment.user.id) do %>
                        <div>
                        <div></div>
                    </div>
                    <div class="comment-text">

                        <div class="comment-entry">
                            <%= attachment_image_tag comment.user, :profile_image, fallback: "no-image.png", size: "40x40" %><% end %>

                                <%= comment.comment %>
                            <% if comment.user == current_user %>
                            <%= link_to "Destroy", book_book_comment_path(book, comment), method: :delete , remote: true,class:"btn-sm btn-danger "%></div>
                            <% end %>
                            <div><%= comment.user.name %></div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        <% end %>
    <% end %>
</table>