<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback:'no-image.png', size: '100x100' %>
<table class ="table">
  <tbody>
    <tr>
  	  <th>name</th>
  	  <td><%= user.name %></td>
    </tr>
    <tr>
  	  <th>introduction</th>
  	  <td><%= user.introduction %></td>
    </tr>
    <!--フォロー数-->
    <tr>
      <th>follows</th>
      <td>
        <%=link_to user.follower.count, user_follows_path(user) %>
      </td>
    </tr>
    <!--フォロー数ここまで-->


    <!--フォロワー数-->
    <tr>
    <th>followers</th>
      <td>
        <%= link_to user.followed.count, user_followers_path(user) %>
      </td>
    </tr>
    <!--フォロワー数ここまで-->

    <!--フォロー機能-->
    <tr>
    <td>
      <% if  current_user.id != user.id %>
        <% if current_user.following?(user )  %>
          <%= link_to 'フォロー外す', unfollow_path(user.id), method: :POST, class:"btn btn-primary"%>
        <% else %>
          <%= link_to 'フォローする', follow_path(user.id), method: :POST, class:"btn btn-success"%>
        </td>
        </tr>
        <% end %>
      <% end %>
      <!--フォロー機能-->
  </tbody>
</table>
<%= link_to  edit_user_path(user) do %>
  <button class="col-xs-12 btn btn-default">
    <i class="glyphicon glyphicon-wrench"></i>
  </button>
<% end %>
