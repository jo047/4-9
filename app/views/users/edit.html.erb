<h1>User info</h1>

<%# ここからエラーメッセージ %>
  <% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %>error</li>
      <% end %>
      </ul>
  </div>
  <% end %>
  <%# ここまでエラーメッセージ %>

  <%= form_for @user do |f| %>

  <h4>name</h4>
  <%= f.text_field :name %>

  <h4>image</h4>
  <%= f.attachment_field :profile_image %>

  <h4>introduction</h4>
  <%= f.text_field :introduction %>

  <%= f.submit 'Update user' %>

  <% end %>
